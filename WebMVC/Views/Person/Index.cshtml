@model ListPersonModel
@{
    ViewData["Title"] = "Index";
}

<h2>*** Bem Vindo! ***</h2>

<p>O que voçê deseja fazer?</p>

<p>Inserir Pessoas</p>
<p>Atualizar Pessoas</p>
<table border="2" style="width:100% ">
    <tr style="text-align:center; background-color:beige">  
        <th>  @Html.ActionLink("Inserir Pessoa", "InsertPerson", "Person")</th>

    </tr>
   <tr style="text-align:center; background-color:red">
       <th>ID</th>
       <th>Nome</th>
       <th>Gênero</th>
       <th>RG</th>
       <th>CPF</th>
       <th>Nascimento</th>
       <th>Estado Civil</th>
       <th>Endereço</th>
       <th>Telefone</th>
       <th>ATUALIZAR</th>
       <th>EXCLUIR</th>

   </tr>
   @if (Model.Lista != null)
   {
@foreach(var person in Model.Lista)
   {
       <tr style="background-color:beige">
            <td>@person.Id</td>
            <td>@person.Name</td>
            <td>@person.Gender</td>
            <td>@person.DocumentNumber</td>
            <td>@person.Identification</td>
            <td>@person.BirthDate</td>
            <td>@person.MeritalStatus</td>
            <td>@person.Address</td>
            <td>@person.Phone</td> 
            <td style="text-align:center">
                <strong>
                    @Html.ActionLink("EDITAR", "EditPerson", "Person", new {personId = person.Id})
                </strong>
            </td> 
            <td style="text-align:center">
                <strong>
                    @Html.ActionLink("X", "DeletePerson", "Person", new {personId = person.Id})
                </strong>
            </td> 
             
        </tr>
   }
        <tr style="background-color:beige">
           <th><strong>Total de Pessoas => </strong>@Model.Lista.Count()</th>
       </tr>
   }
   @Html.HiddenFor(model => model.EditPerson.Id)
</table>
</br>
<table>
    <tr>
        <th>Nome :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.Name)</td>
        <th>Gênero :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.Gender)
                <!-- <select>
                    <option value="0">Masculino</option>
                    <option value="1">Feminino</option>
                    <option value="2">Indefinido</option>
                </select> -->
            </td>
    </tr>
    <tr>
        <th>RG :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.DocumentNumber)</td>
        <th>CPF :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.Identification)</td>
    </tr>
    <tr>
        <th>Nascimento :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.BirthDate)</td>
        <th>Estado Civil :</th> 
        <td>@Html.EditorFor(model => model.EditPerson.MeritalStatus)</td>
             <!-- <select>
                    <option value="0">Solteiro</option>
                    <option value="1">Casado</option>
                    <option value="2">Divorciado</option>
                    <option value="3">Viuvo</option>
             </select> -->
        </td>
    </tr>
    <tr>
        <th>Endereço :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.Address)</td>
        <th>Telefone :</th> 
            <td>@Html.EditorFor(model => model.EditPerson.Phone)</td>
    </tr>
    <tr>
        <td>@Html.ActionLink("Inserir", "InsertPerson", "Person")</td>
        <td>@Html.ActionLink("Atualizar", "UpdatePerson", "Person")</td>
    </tr>

   
</table>
