@model ListPersonModel
@{
    ViewData["Title"] = "Person Page";
}

<h2>*** Person Page! ***</h2>

<p>O que voçê deseja fazer?</p>


<table border="2" style="width:100% ">
    <tr style="text-align:center; background-color:beige">  
<strong>
        <th>
             <strong>
                @Html.ActionLink("Create Person","Create","Person")
             </strong>  
        </th>

    </tr>
   <tr style="text-align:center; background-color:red">
       <th>ID</th>
       <th>Nome</th>
       <th>Gênero</th>
       <th>RG</th>
       <th>CPF</th>
       <th>Nascimento</th>
       <th>Estado Civil</th>
       <th>Endereço</th>
       <th>Telefone</th>
       <th>ATUALIZAR</th>
       <th>EXCLUIR</th>

   </tr>
   @if (Model.Lista != null)
   {
@foreach(var person in Model.Lista)
   {
       <tr style="background-color:beige">
            <td>@person.Id</td>
            <td>@person.Name</td>
            <td>@person.Gender</td>
            <td>@person.DocumentNumber</td>
            <td>@person.Identification</td>
            <td>@person.BirthDate</td>
            <td>@person.MeritalStatus</td>
            <td>@person.Address</td>
            <td>@person.Phone</td> 
            <td style="text-align:center">
                <strong>
                    @Html.ActionLink("!", "Edit", "Person", new {personId = person.Id})
                </strong>
            </td> 
            <td style="text-align:center">
                <strong>
                    @Html.ActionLink("X", "DeletePerson", "Person", new {personId = person.Id})
                </strong>
            </td> 
             
        </tr>
   }
        <tr style="background-color:beige">
           <th><strong>Total de Pessoas => </strong>@Model.Lista.Count()</th>
        </tr>
   }   
</table>
