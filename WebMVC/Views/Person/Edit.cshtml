@model PersonModel
@using GJJA.RegistraVoce.Domain.Enums
@{
    ViewData["Title"] = "Edit Person Page";
}

<h2>*** Edit Person Page! ***</h2>

<p>O que voçê deseja fazer?</p>

<strong>
    @Html.ActionLink("List all","Index","Person")
</strong>
@using (Html.BeginForm("Update", "Person", FormMethod.Post))
{
    @Html.HiddenFor(m=>m.Id)
<table>
    <tr style="text-align:center; background-color:red">
    <th>Parâmeter</th>
    <th>Value</th>
    </tr>
    <tr>
        <td>Name</td>
        <td>@Html.EditorFor(m => m.Name)</td>
    </tr>
    <tr>
        <td>Gender</td>
        <td>@Html.DropDownListFor(m => m.Gender, new SelectList(Enum.GetValues(typeof(Gender))))</td>
    </tr>
    <tr>
        <td>DocumentNumber</td>
        <td>@Html.EditorFor(m => m.DocumentNumber)</td>
    </tr>
    <tr>
        <td>Identification</td>
        <td>@Html.EditorFor(m => m.Identification)</td>
    </tr>
    <tr>
        <td>BirthDate</td>
        <td>@Html.EditorFor(m => m.BirthDate)</td>
    </tr>
    <tr>
        <td>Marital Status</td>
        <td>@Html.DropDownListFor(m => m.MeritalStatus,new SelectList(Enum.GetValues(typeof(MeritalStatus))))
        </td>
    </tr>
    <tr>
        <td>Address</td>
        <td>@Html.EditorFor(m => m.Address)</td>
    </tr>
    <tr>
        <td>Phone</td>
        <td>@Html.EditorFor(m => m.Phone)</td>
    </tr>
</table>
<input type="submit" value="Update Person"/>
}